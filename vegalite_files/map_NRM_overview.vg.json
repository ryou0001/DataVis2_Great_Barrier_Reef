{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

        "width": 505,
        "height": 600,
        "title": { "text": "Natural Resource Management (NRM) Regions" },
        "projection": {"type": "mercator"},
        "view": {"fill": "lightblue"},
        "layer": [
            {
            "data": {
                "name": "GBR_boundary",
                "url": "vegalite_files/maps/GBR_boundary.json",
                "format": {"type": "topojson", "feature": "GBR_boundary"}
            },
            "mark": {"type": "geoshape", "fill": "lightpink", "opacity": 0.7}
            },
            {
                "data": {
                    "url": "vegalite_files/maps/queensland_surrounds.json",
                    "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
                },
                "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "darkgray"}
            },
            {
                "data": {
                    "url": "vegalite_files/maps/queensland.json",
                    "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
                },
                "mark": {"type": "geoshape", "fill": "white", "stroke": "darkgray"}
            },
            {
                "data": {
                    "url": "vegalite_files/maps/NRM_regions_2020.json",
                    "format": {"type": "topojson", "feature": "NRM_regions_2020"}
                },
                "mark": {
                    "type": "geoshape", 
                    "stroke": "darkgray",
                    "opacity": 0.3
                },
								"encoding": {
                  "color": {
                    "field": "properties.NRM_REGION",
                    "scale": {"range": ["red", "blue", "yellow", "green", "purple", "orange"]},
                    "legend": null
                  },
									"tooltip": [
										{"field": "properties.NRM_REGION", "title": "NRM Region"}
									]
								}
            },{
            "data": {"values": {"state": "QUEENSLAND", "x": 146, "y": -27.5}},
            "mark": {"type": "text", "fontSize": 20, "color": "darkgray"},
            "encoding": {
                "text": {"field": "state", "type": "nominal"},
                "longitude": {"field": "x"}, 
                "latitude": {"field": "y"}}
            },{
            "data": {"values":[
              {"longitude": 144.1, "latitude": -12.5, "label": "CAPE YORK"},
              {"longitude": 146.5, "latitude": -17, "label": "WET TROPICS"},
              {"longitude": 148, "latitude": -18.8, "label": "BURDEKIN"},
              {"longitude": 150, "latitude": -20.4, "label": "MACKAY WHITSUNDAY"},
              {"longitude": 151.4, "latitude": -22.6, "label": "FITZROY"},
              {"longitude": 151.4, "latitude": -27.2, "label": "BURNETT MARY"}
            ]},
            "mark": {"type": "text", "align": "left", "fontSize": 13},
            "encoding": {
              "text": {"field": "label"},
              "longitude": {"field": "longitude"},
              "latitude": {"field": "latitude"}
            }
            },
                {
    "data": {
        "url": "vegalite_files/maps/Population_centres.csv"
    },
    "encoding": {
        "longitude": {"field": "long", "type": "quantitative"}, 
        "latitude": {"field": "lat", "type": "quantitative"}
    },
    "layer": [ {
        "mark": {"type": "circle", "fill": "black", "opacity": 0.6}
    }, {
        "mark": {"type": "text", "dx":-10, "align":"right", "color": "black", "opacity": 0.8}, 
        "encoding": {
            "text": {"field": "name", "type": "nominal"}}
    }
    ]
    }

        ]
    }