{
"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
"width": 610,
"height": 300,
"title": { "text": "Great Barrier Reef" },
"projection": {"type": "mercator", "scale": 800, "center": [133, -28]},
"view": {"fill": "lightblue"},
"layer": [
    {
    "data": {
        "url": "vegalite_files/maps/GBR_boundary.json",
        "format": {"type": "topojson", "feature": "GBR_boundary"}
    },
    "mark": {"type": "geoshape", "fill": "green", "opacity": 0.2}
    },
    {
        "data": {
            "url": "vegalite_files/maps/STE_2021_AUST_GDA2020.json",
            "format": {"type": "topojson", "feature": "STE_2021_AUST_GDA2020"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "darkgray"}
    },
    {
    "data": {
        "url": "vegalite_files/maps/queensland.json",
        "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
    },
    "mark": {"type": "geoshape", "fill": "lightyellow", "stroke": "darkgray"}
    },
    {
        "data": {
            "url": "vegalite_files/maps/NRM_regions_2020.json",
            "format": {"type": "topojson", "feature": "NRM_regions_2020"}
        },
        "mark": {
            "type": "geoshape", 
            "fill": null, 
            "stroke": "darkgray",
            "opacity": 0.5 
        }
    },
    {
    "data": {
        "url": "vegalite_files/maps/GBR_reef.json",
        "format": {"type": "topojson", "feature": "TS_AIMS_NESP_Torres_Strait_Features_V1b_with_GBR_Features"}
    },
    "mark": {"type": "geoshape", "fill": "pink"}
    },
    {
    "data": {
        "url": "vegalite_files/maps/Population_centres.csv"
    },
    "encoding": {
        "longitude": {"field": "long", "type": "quantitative"}, 
        "latitude": {"field": "lat", "type": "quantitative"}
    },
    "layer": [ {
        "mark": {"type": "circle", "fill": "black", "opacity": 0.75}
    }, {
        "mark": {"type": "text", "dx":-10, "align":"right", "opacity": 0.75}, 
        "encoding": {
            "text": {"field": "name", "type": "nominal"}}
    }
    ]
    },
    {
    "data": {"values": [{"state": "QUEENSLAND", "x": 146, "y": -27.5}]},
    "mark": {"type": "text", "fontSize": 18, "color": "darkgray"},
    "encoding": {
        "text": {"field": "state", "type": "nominal"},
        "longitude": {"field": "x"}, 
        "latitude": {"field": "y"}}
    }
]
}