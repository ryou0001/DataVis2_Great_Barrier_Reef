{
"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "config": {"view": {"stroke": "transparent"}},
"background": "aquamarine",
"hconcat": [
  {
  "width": 120,
  "height": 120,
  "view": {"stroke": null},
  "layer": [
          {
          "data": {
              "values": [
                  {"category": "other", "value": 676.6},
                  {"category": "mining", "value": 30}
              ]},
          "mark": {"type": "arc", "innerRadius": 50},
          "encoding": {
              "theta": {"field": "value", "type": "quantitative"},
          "color": {
            "field": "category",
            "scale": {
            "domain": ["mining", "other"],
            "range": ["orange", "lightgrey"]
            },
            "legend": null
        }        }
      },
      {
          "data": {"values": [{"label": "4.25%"}]},
        "mark": {
          "type": "text", 
          "fill": "black", 
          "align": "center", 
          "baseline": "middle", 
          "dy": -15,
          "fontSize": 30},
      "encoding": {
          "text": {"field": "label"}
        }
      },
      {
          "data": {"values": [{"label": ["jobs supported", "by mining"]}]},
        "mark": {
          "type": "text", 
          "fill": "black", 
          "align": "center", 
          "baseline": "middle",
          "dy": 10, 
          "fontSize": 13},
      "encoding": {
          "text": {"field": "label"}
        }
      }
  ]
  },
  {
  "width": 200,
  "height": 120,
  "view": {"stroke": null},
  "layer": [
          {
          "data": {"url": "vegalite_files/data/resident_threatsx.csv"},
          "transform": [
            {"filter": "datum.NRM == 'GBR Region'"},
            {"calculate": "datum.threat_total/datum.total_interviewed", "as": "threat_perc"}
          ],
          "mark": {"type": "bar"},
          "encoding": {
              "x": {"field": "threat", "type": "nominal", "sort": "-y", "axis": null},
              "y": {"field": "threat_perc", "type": "quantitative", "axis": null, "title": null},
            "color": {
              "condition": {
                "test": "datum.threat == 'mining'",
                "value": "orange"
              }, "value": "darkgrey"
              },
              "tooltip": [
                {"field": "threat", "title": "Threat"},
                {"field": "threat_perc", "format": ".2%", "title": "Percentage of residents said it was a top-3 threat"}
              ]
            }        
          },
          {
            "data": {
              "values": [{"label": "16%"}]
            },
            "mark": {
              "type": "text", 
              "fill": "black", 
              "align": "center", 
              "baseline": "middle", 
              "dy": -20,
              "dx": 40,
              "fontSize": 28
            },
            "encoding": {
              "text": {"field": "label"}
            }
          },
                    {
            "data": {
              "values": [{"label": ["residents concerned","about mining"]}]
            },
            "mark": {
              "type": "text", 
              "fill": "black", 
              "align": "center", 
              "baseline": "middle", 
              "dy": 0,
              "dx": 40,
              "fontSize": 12
            },
            "encoding": {
              "text": {"field": "label"}
            }
          }

        ]
  }
]
}