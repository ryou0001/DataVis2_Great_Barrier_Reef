{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "vegalite_files/data/resident_value_gbr.csv"},
  "config": {"concat": {"spacing": 20}},
	"params": [
		{
			"name": "NRM_selection",
			"bind": {
				"input": "select",
				"options": [
					null,
					"Burdekin",
					"Burnett Mary",
					"Fitzroy",
					"Mackay Whitsunday",
					"Wet Tropics"
				],
				"labels": [
					"Show all",
					"Burdekin",
					"Burnett Mary",
					"Fitzroy",
					"Mackay Whitsunday",
					"Wet Tropics"
				],
				"name": "Select NRM Region: "
			}
		}
	],
	"transform": [
		{
			"filter": "NRM_selection == null || NRM_selection == datum.NRM"
		}
	],
	"vconcat": [
		{"hconcat": [
			{
				"width": 240,
				"height": 150,
				"title": { "text": "I love that I live beside the GBR" },
				"layer": [
					{
						"mark": {"type": "bar", "color": "#002857"},
						"encoding": {
							"x": {"bin": true, "field": "love_live_beside", "axis": {"format": ".0f"}, "title": ["Resident responses (binned)","strongly disagree to strongly agree"]},
							"y": {"aggregate": "count", "scale": {"domain": [0,1400]}, "title": "Count"} 
						}
					},
					{
						"mark": {"type": "rule", "strokeWidth":2},
						"encoding": {
							"x": {"aggregate": "mean", "field": "love_live_beside"},
							"color": {"value": "#e47238"}
						}
					},
					{
						"mark": {
							"type": "text", 
							"color": "#e47238", 
							"angle": -90, 
							"dx": 30,
							"dy": -10, 
							"fontSize": 12},
						"encoding": {
							"text": {"aggregate": "mean", "field": "love_live_beside", "format": ".2"},
							"x": {"aggregate": "mean", "field": "love_live_beside"}
						}
					}, 
					{
						"mark": {
							"type": "text", 
							"color": "#e47238", 
							"angle": -90, 
							"dx": -5,
							"dy": -10, 
							"fontSize": 12},
						"encoding": {
							"text": {"value": "Average "},
							"x": {"aggregate": "mean", "field": "love_live_beside"}
						}
					}
				]
			},{
			"width": 240,
			"height": 150,
			"title": { "text": "The GBR is part of my identity" },
				"layer": [
					{
						"mark": {"type": "bar", "color": "#002857"},
						"encoding": {
							"x": {"bin": true, "field": "identity", "axis": {"format": ".0f"}, "title": ["Resident responses (binned)","strongly disagree to strongly agree"]},
							"y": {"aggregate": "count", "scale": {"domain": [0,1400]}, "title": "Count"} 
						}
					},
					{
						"mark": {"type": "rule", "strokeWidth":2},
						"encoding": {
							"x": {"aggregate": "mean", "field": "identity"},
							"color": {"value": "#e47238"}
						}
					},
					{
						"mark": {
							"type": "text", 
							"color": "#e47238", 
							"angle": -90, 
							"dx": 30,
							"dy": -10, 
							"fontSize": 12},
						"encoding": {
							"text": {"aggregate": "mean", "field": "identity", "format": ".2"},
							"x": {"aggregate": "mean", "field": "identity"}
						}
					}, 
					{
						"mark": {
							"type": "text", 
							"color": "#e47238", 
							"angle": -90, 
							"dx": -5,
							"dy": -10, 
							"fontSize": 12},
						"encoding": {
							"text": {"value": "Average "},
							"x": {"aggregate": "mean", "field": "identity"}
						}
					}
				]
			}
		]},
		{"hconcat": [
			{
				"width": 240,
				"height": 150,
				"title": { "text": ["The GBR is a great asset for","the economy of this region"] },
				"layer": [
					{
						"mark": {"type": "bar", "color": "#002857"},
						"encoding": {
							"x": {"bin": true, "field": "asset", "axis": {"format": ".0f"}, "title": ["Resident responses (binned)","strongly disagree to strongly agree"]},
							"y": {"aggregate": "count", "scale": {"domain": [0,1400]}, "title": "Count"} 
						}
					},
					{
						"mark": {"type": "rule", "strokeWidth":2},
						"encoding": {
							"x": {"aggregate": "mean", "field": "asset"},
							"color": {"value": "#e47238"}
						}
					},
					{
						"mark": {
							"type": "text", 
							"color": "#e47238", 
							"angle": -90, 
							"dx": 30,
							"dy": -10, 
							"fontSize": 12},
						"encoding": {
							"text": {"aggregate": "mean", "field": "asset", "format": ".2"},
							"x": {"aggregate": "mean", "field": "asset"}
						}
					}, 
					{
						"mark": {
							"type": "text", 
							"color": "#e47238", 
							"angle": -90, 
							"dx": -5,
							"dy": -10, 
							"fontSize": 12},
						"encoding": {
							"text": {"value": "Average "},
							"x": {"aggregate": "mean", "field": "asset"}
						}
					}
				]
			}
		,{
			"width": 240,
			"height": 150,
			"title": { "text": ["The GBR contributes to my","quality of life and well-being"] },
				"layer": [
					{
						"mark": {"type": "bar", "color": "#002857"},
						"encoding": {
							"x": {"bin": true, "field": "quality_of_life", "axis": {"format": ".0f"}, "title": ["Resident responses (binned)","strongly disagree to strongly agree"]},
							"y": {"aggregate": "count", "scale": {"domain": [0,1400]}, "title": "Count"} 
						}
					},
					{
						"mark": {"type": "rule", "strokeWidth":2},
						"encoding": {
							"x": {"aggregate": "mean", "field": "quality_of_life"},
							"color": {"value": "#e47238"}
						}
					},
					{
						"mark": {
							"type": "text", 
							"color": "#e47238", 
							"angle": -90, 
							"dx": 30,
							"dy": -10, 
							"fontSize": 12},
						"encoding": {
							"text": {"aggregate": "mean", "field": "quality_of_life", "format": ".2"},
							"x": {"aggregate": "mean", "field": "quality_of_life"}
						}
					}, 
					{
						"mark": {
							"type": "text", 
							"color": "#e47238", 
							"angle": -90, 
							"dx": -5,
							"dy": -10, 
							"fontSize": 12},
						"encoding": {
							"text": {"value": "Average "},
							"x": {"aggregate": "mean", "field": "quality_of_life"}
						}
					}
				]
			}
		]}
	]
}